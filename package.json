{
  "name": "botui-child-next",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn run lint --fix",
    "clean": "lerna clean -y",
    "bootstrap": "lerna bootstrap",
    "run:admin": "lerna run --stream --scope @botui/admin",
    "run:api": "lerna run --stream --scope @botui/api",
    "run:chat-components": "lerna run --stream --scope @botui/chat-components",
    "run:chat-controller": "lerna run --stream --scope @botui/chat-controller",
    "run:chat-hooks": "lerna run --stream --scope @botui/chat-hooks",
    "run:chat-host": "lerna run --stream --scope @botui/chat-host",
    "run:types": "lerna run --stream --scope @botui/types",
    "run:use-cors-state": "lerna run --stream --scope use-cors-state"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^0.2.34",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "is-color": "^1.0.2",
    "material-ui-color": "^0.4.6",
    "material-ui-dropzone": "^3.5.0",
    "next": "^9.5.5",
    "react-id-generator": "^3.0.1",
    "react-nl2br": "^1.0.1",
    "react-scroll": "^1.8.1",
    "styled-components": "^5.2.1",
    "use-cors-state": "^1.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^5.0.0",
    "@types/is-color": "^1.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-scroll": "^1.8.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
