{
  "name": "botui-child-next",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "domains/*"
  ],
  "scripts": {
    "build:packages": "lerna run build --include-dependencies --stream --scope @botui/*",
    "build:packages:pre": "lerna run build:pre",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn run lint --fix",
    "clean": "lerna clean -y",
    "bootstrap": "lerna bootstrap",
    "run:api": "lerna run --stream --scope @botui/api",
    "run:chat-components": "lerna run --stream --scope @botui/chat-components",
    "run:chat-controller": "lerna run --stream --scope @botui/chat-controller",
    "run:chat-hooks": "lerna run --stream --scope @botui/chat-hooks",
    "run:types": "lerna run --stream --scope @botui/types",
    "run:use-cors-state": "lerna run --stream --scope use-cors-state",
    "dev:packages": "lerna run dev --parallel --scope @botui/*",
    "dev:domains": "lerna run dev --parallel --scope admin --scope chat-host",
    "versionup": "lerna version --conventional-commits",
    "versionup:patch": "lerna version patch --conventional-commits",
    "versionup:minor": "lerna version minor --conventional-commits",
    "versionup:major": "lerna version minor --conventional-commits",
    "release": "lerna publish from-package"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@rollup/plugin-babel": "^5.2.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^5.0.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-loader": "^8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.36.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
